<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.details.BookDetailsActivity">
    <include layout="@layout/include_toolbar"
            />
    <TextView
            style="@style/MyTextViewLabek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"

            android:layout_marginTop="16dp"
            android:text="@string/book_details_title_label" />

    <TextView
            style="@style/MyTextViewLabek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:id="@+id/booksDetailsTitle"
            android:layout_marginLeft="16dp"
            tools:text="TEST" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"

            android:text="@string/book_details_description_label"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/booksDetailsDescription"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp" />

</LinearLayout>